<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.AccountMapper">
    <insert id="insert" >
        insert into account_table values(null,#{account},#{password},#{coupon})
    </insert>
    <select id="selectList" resultType="Account">
        select * from account_table
    </select>
    <update id="recharge">
        update account_table set coupon = coupon + #{number} where account = #{account}
    </update>
    <update id="consume">
        update account_table set coupon = coupon - #{number} where account = #{account}
    </update>
    <update id="record">
        insert into record values(null,#{account},#{upDateTime},#{category},#{num})
    </update>
</mapper>